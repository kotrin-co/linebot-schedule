<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav.ejs %>

<div id="calendar">
    <div id="inlineArea">
        <button id="registrationButton" class="inline-block registration">新規登録</button>
        <button id="rButton" class="inline-block changeButton"><</button>
        <h2 id="monthArea" class="inline-block"></h2>
        <button id="pButton" class="inline-block changeButton">></button>
        <button id="thisWeekButton" class="inline-block thisweekButton">今 週</button>
    </div>
    <table class="reservation_table">
        <thead>
            <tr id="week">
                <th class="th_left_col fixed0"></th>
                <% for ( let i=0; i<7 ;i++ ){ %>
                <th class="table_header fixed0" id="w<%= i %>"></th>
                <% } %>
            </tr>
            <tr id="date">
                <th class="th_left_col fixed1"></th>
                <% for ( let i=0; i<7 ;i++ ){ %>
                    <th class="table_header fixed1" id="d<%= i %>"></th>
                <% } %>
            </tr>
        </thead>
        <tbody>
            <% for (let i=0; i<11; i++){ %>
                <tr id="time<%= 9+i %>">
                    <td class="td_left_col"><%= 9+i %>:00</td>
                    <% for (let j=0; j<7; j++){ %>
                    <td class="table_element" id="d<%= j %>-<%= 9+i %>"></td>
                    <% } %>
                </tr>
            <% } %>
        </tbody>        
    </table>
</div>

<div id="dialog">
    <button id="button-edit" onclick="location.href='/edit'">編集</button>
    <p id="contents"></p>
    <button id="button-cancel">キャンセル</button>
    <button id="button-ok">OK</button>
</div>

<div id="registration">
    <form action="/api/todos" method="post">
        <div>
            <label for="line_uid">ラインID</label>
            <input type="text" id="line_uid" name="line_uid">
        </div>
        <div>
            <label for="name">名前</label>
            <input type="text" id="name" name="name">
        </div>
        <div>
            <input type="text" id="year" name="year"> 年
            <input type="text" id="date_m" name="date_m"> 月
            <input type="text" id="date_d" name="date_d"> 日
        </div>
        <div>
            <label for="menu">メニュー</label>
            <select name="menu" size="3"></select>
            <option value="cut" selected>カット</option>
            <option value="cut&shampoo">カット＆シャンプー</option>
            <option value="color">カラーリング</option>
        </div>
        <div>
            <p>
                希望時間：
            </p>
            <input type="text" id="starttime_h" name="starttime_h"> 時
            <input type="text" id="starttime_m" name="starttime_m"> 分
        </div>
        <div>
            <button id="cancel-form">キャンセル</button>
            <input type="submit" value="送信">
        </div>
    </form>
    <!-- <p id="contents"></p>
    <button id="button-cancel">キャンセル</button>
    <button id="button-ok">OK</button> -->
</div>

<script src='js/main.js'></script>
</body>
</html>