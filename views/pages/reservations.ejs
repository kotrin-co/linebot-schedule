<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav.ejs %>

<div id="calendar">
    <div id="inlineArea">
        <button id="registrationButton" class="inline-block registration">新規登録</button>
        <button id="rButton" class="inline-block changeButton"><</button>
        <h2 id="monthArea" class="inline-block"></h2>
        <button id="pButton" class="inline-block changeButton">></button>
        <button id="thisWeekButton" class="inline-block thisweekButton">今 週</button>
    </div>
    <table class="reservation_table">
        <thead>
            <tr id="week">
                <th class="th_left_col fixed0"></th>
                <% for ( let i=0; i<7 ;i++ ){ %>
                <th class="table_header fixed0" id="w<%= i %>"></th>
                <% } %>
            </tr>
            <tr id="date">
                <th class="th_left_col fixed1"></th>
                <% for ( let i=0; i<7 ;i++ ){ %>
                    <th class="table_header fixed1" id="d<%= i %>"></th>
                <% } %>
            </tr>
        </thead>
        <tbody>
            <% for (let i=0; i<11; i++){ %>
                <tr id="time<%= 9+i %>">
                    <td class="td_left_col"><%= 9+i %>:00</td>
                    <% for (let j=0; j<7; j++){ %>
                    <td class="table_element" id="d<%= j %>-<%= 9+i %>"></td>
                    <% } %>
                </tr>
            <% } %>
        </tbody>        
    </table>
</div>

<div id="dialog">
    <button id="button-edit" onclick="location.href='/edit'">編集</button>
    <p id="contents"></p>
    <button id="button-cancel">キャンセル</button>
    <button id="button-ok">OK</button>
</div>

<div id="registration">
    <form action="/api/todos" method="post">
        <p>LINE ID:<input type="text" id="line_uid" name="line_uid"></p>
        <p>名前:<input type="text" id="name" name="name"></p>
        <p><input type="text" id="year" name="year" size="6" maxlength="4"> 年 <input type="text" id="date_m" name="date_m" size="4" maxlength="2"> 月 <input type="text" id="date_d" name="date_d" size="4" maxlength="2"> 日</p>
        <p>メニュー:
            <select name="menu" size="3">
                <option value="cut" selected>カット</option>
                <option value="cut&shampoo">カット＆シャンプー</option>
                <option value="color">カラーリング</option>
            </select>
        </p>
        <p>時間：<input type="text" id="starttime_h" name="starttime_h"  size="5" maxlength="2"> 時 <input type="text" id="starttime_m" name="starttime_m"  size="5" maxlength="2"> 分</p>
        <div>
            <button id="cancel-form">キャンセル</button>
            <input type="submit" value="送信">
        </div>
    </form>
    <!-- <p id="contents"></p>
    <button id="button-cancel">キャンセル</button>
    <button id="button-ok">OK</button> -->
</div>

<script src='js/main.js'></script>
</body>
</html>